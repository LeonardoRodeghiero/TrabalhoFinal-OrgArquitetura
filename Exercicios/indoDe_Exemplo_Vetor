
	JMP inicio
vetor: 	DB 11
	DB 22
	DB 33
	DB 44
ender: 	DB 0

inicio:
	MOV D, 0
	MOV C, 0
	MOV B, [vetor]
	MOV [ender], B
	ADD D, [ender]
	INC C
	MOV B, [ender]
	ADD B, C
	MOV [ender], B
	ADD D, [ender]
	hlt







;CONTINUAÇÃO DO EXERCICIOS

	JMP inicio
vetorA: DB 11
	DB 22
	DB 33
enderA: DB 0

vetorB: DB 44
	DB 55
	DB 66
enderB: DB 0

vetorC: DB 0
	DB 0
	DB 0
enderC: DB 0

inicio:
	Mov D, 0
	MOV B, vetorA
	MOV [enderA], B
	
	MOV B, vetorB
	MOV [enderB], B

	MOV B, vetorC
	MOV [enderC], B



for_cond:
	CMP D, 3 ; compara D com 5
	JZ .fim ; se a flag Z virar TRUE, pula para o fim
	
	JMP loop ; se a flag Z continuar FALSE, pula para o loop


loop:
	
	MOV B, [enderA]
	ADD B, [enderB]

	MOV [vetorC], B
	
	INC D
	MOV B, [enderA]
	Add B, D
	MOV [enderA], C
	
	
	MOV B, [enderB]
	Add B, D
	MOV [enderB], B

	
	MOV B, [enderC]
	Add B, D
	MOV [enderC], B

	;MOV D, 0
	;MOV C, 0
	;MOV B, [vetorA]
	;MOV [enderA], B
	;ADD D, [enderA]
	;INC C
	;MOV B, [enderA]
	;ADD B, C
	;MOV [enderA], B
	;ADD D, [enderA]
	jmp for_cond
.fim:
	HLT
